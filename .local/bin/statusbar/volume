#!/usr/bin/env sh

case $BLOCK_BUTTON in
	1) amixer sset Master toggle >/dev/null;;
	2) i3-msg -q exec "$TERMINAL -e alsamixer" ;;
	4) amixer sset Master 5%+ >/dev/null 2>/dev/null ;;
	5) amixer sset Master 5%- >/dev/null 2>/dev/null ;;
esac

volstat="$(amixer get Master)"

echo "$volstat" | grep "\[off\]" >/dev/null && printf "ðŸ”‡\n" && exit

vol=$(echo "$volstat" | grep -m1 -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g')

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\n" "$icon" "$vol"
