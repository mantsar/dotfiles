#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
	3) $TERMINAL -e myhtop ;;
esac

cpu=$(sensors | awk '/Core 0/ {print $3}' | cut -c2-3,6-8)

if [ -z "$cpu" ]
then
	cpu=$(sensors | awk '/edge/ {print $2}' | cut -c2-3,6-8)
fi

echo $cpu
